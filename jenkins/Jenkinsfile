pipeline {
    agent {
        docker 
        {
            image 'python:3.9.1'
        }
    }
    stages {
        stage('Build') {
            
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'python -m pip install --no-cache-dir --user -r requirements.txt' 
                }
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    // sh 'python -m pytest'
                    sh 'python -m py_compile website/test.py'
                }
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}